<div id="clearance" class="sign-up form-text-box">
  <h2 class="white-text"><%= t(".title") %></h2>

  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>

    <div class="submit-field">
      <%= form.submit "Sign me up!"%>
    </div>

    <div class="other-links">
      <%= link_to t(".sign_in"), sign_in_path %>
    </div>
  <% end %>
</div>
<div class="general-text-box">
    <a href="/" class="btn btn-lg btn-info"><span class="glyphicon glyphicon-home"></span> Home</a>
</div>
