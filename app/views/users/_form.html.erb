<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', placeholder: "Email" %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password, placeholder: "Password" %>
</div>

<div>
  <%= form.label :firstname, "First Name"%>
  <%= form.text_field :firstname, placeholder: "First Name" %>
</div>

<div>
  <%= form.label :lastname, "Last Name"%>
  <%= form.text_field :lastname, placeholder: "Last Name" %>
</div>

<div>
  <%= form.label :birthday, "Birthday"%>
  <%= form.date_select :birthday, start_year: Date.today.year - 100, end_year: Date.today.year %>
</div>

<div>
  <%= form.label :phonenumber, "Contact Number"%>
  <%= form.text_field :phonenumber, placeholder: "Contact Number" %>
</div>

<div>
  <%= form.label :description, "Description"%>
  <%= form.text_field :description, placeholder: "Description" %>
</div>

<div>
  <%= form.label :country, "Nationality"%>
  <%= form.country_select :country %>
</div>

<div>
  <%= form.label :gender, "Gender"%>
  <%= form.select :gender, [["Male","M"],["Female","F"]], placeholder: "Gender" %>
</div>
